{
  "name": "ngx-lottie",
  "version": "3.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngx-lottie/ngx-lottie.git"
  },
  "keywords": [
    "animation",
    "canvas",
    "svg",
    "after effects",
    "plugin",
    "angular",
    "angular8",
    "angular 8",
    "universal",
    "ivy"
  ],
  "author": "Artur Androsovych",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ngx-lottie/ngx-lottie/issues"
  },
  "homepage": "https://github.com/ngx-lottie/ngx-lottie#readme",
  "scripts": {
    "ng": "ng",
    "test": "ng test",
    "lint": "ng lint",
    "// - UTILS": "Utility scripts",
    "lottie:lint": "ng lint",
    "lottie:test": "ng test --runInBand",
    "lottie:build": "ts-node ./tools/build && ts-node ./tools/copy-readme",
    "format": "prettier --write \"src/**/*.ts\"",
    "bump": "ts-node ./tools/bump",
    "// - CI": "CI pipelines",
    "ci:pipelines": "npm-run-all lottie:*",
    "// - RELEASE": "Scripts for version incrementing + generating changelog + releasing",
    "release": "git push origin && git push origin --tags",
    "release:major": "yarn bump --release major && changelog -M && yarn release:lottie && yarn version --major && yarn release",
    "release:minor": "yarn bump --release minor && changelog -m && yarn release:lottie && yarn version --minor && yarn release",
    "release:patch": "yarn bump --release patch && changelog -p && yarn release:lottie && yarn version --patch && yarn release",
    "release:lottie": "git add . && git commit -m 'feat: update CHANGELOG.md'"
  },
  "private": true,
  "devDependencies": {
    "@angular-builders/jest": "^8.2.0",
    "@angular-devkit/build-angular": "^0.803.3",
    "@angular/animations": "^8.2.5",
    "@angular/cli": "^8.3.3",
    "@angular/common": "^8.2.5",
    "@angular/compiler": "^8.2.5",
    "@angular/compiler-cli": "^8.2.5",
    "@angular/core": "^8.2.5",
    "@angular/platform-browser": "^8.2.5",
    "@angular/platform-browser-dynamic": "^8.2.5",
    "@angular/platform-server": "^8.2.5",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-angular": "^8.1.0",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.4",
    "@types/semver": "^6.0.2",
    "codelyzer": "^5.1.0",
    "colors": "^1.3.3",
    "core-js": "^3.2.1",
    "express": "^4.17.1",
    "generate-changelog": "^1.8.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "jest-preset-angular": "^7.1.1",
    "lint-staged": "^9.2.5",
    "lottie-web": "^5.5.8",
    "ng-packagr": "^5.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rxjs": "^6.5.3",
    "semver": "^6.3.0",
    "ts-node": "^8.3.0",
    "tsickle": "^0.37.0",
    "tslib": "^1.10.0",
    "tslint": "^5.19.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "3.5.3",
    "zone.js": "^0.10.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "endOfLine": "lf",
    "tabWidth": 2,
    "printWidth": 100,
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "singleQuote": true
  }
}
