{
  "name": "ngx-lottie",
  "version": "4.1.3",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngx-lottie/ngx-lottie.git"
  },
  "keywords": [
    "animation",
    "canvas",
    "svg",
    "after effects",
    "plugin",
    "angular",
    "angular8",
    "angular 8",
    "universal",
    "ivy"
  ],
  "author": "Artur Androsovych",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ngx-lottie/ngx-lottie/issues"
  },
  "homepage": "https://github.com/ngx-lottie/ngx-lottie#readme",
  "scripts": {
    "start-test": "start-server-and-test",
    "ng": "ng",
    "test": "ng test",
    "lint": "ng lint",
    "build": "ts-node ./tools/build && ts-node ./tools/copy-readme",
    "format": "prettier --write \"src/**/*.ts\"",
    "bump": "ts-node ./tools/bump",
    "serve:integration": "ng serve --prod --project integration",
    "serve:integration:static": "angular-http-server --path dist-integration -p 4200 --silent",
    "serve:integration:ssr": "yarn ts-node integration/server",
    "build:integration": "ng run integration:build:production",
    "build:integration:ssr": "ng run integration:server:production",
    "// - E2E": "E2E testing #requires yarn build:integration",
    "cy:open": "cypress open --config integrationFolder=cypress/integration",
    "cy:open:ssr": "cypress open --config integrationFolder=cypress/ssr",
    "cy:run": "cypress run --config integrationFolder=cypress/integration",
    "cy:run:ssr": "cypress run --config integrationFolder=cypress/ssr",
    "cy:run:chrome": "yarn cy:run --browser chrome",
    "cy:run:chromium": "yarn cy:run --browser chromium",
    "e2e": "start-test serve:integration 4200 cy:open",
    "e2e:chrome": "start-test serve:integration 4200 cy:run:chrome",
    "e2e:ssr": "start-test serve:integration:ssr 4200 cy:open:ssr",
    "e2e:chromium": "start-test serve:integration 4200 cy:run:chromium",
    "// - CI": "CI Testing",
    "test:ci": "ng test --project lottie --colors --runInBand",
    "test:ci:e2e": "yarn start-test serve:integration:static 4200 cy:run",
    "test:ci:integration": "yarn build:integration",
    "test:ci:integration:ssr": "yarn build:integration:ssr && yarn start-test serve:integration:ssr 4200 cy:run:ssr",
    "// - RELEASE": "Scripts for version incrementing + generating changelog + releasing",
    "release": "git push origin && git push origin --tags",
    "release:major": "yarn bump --release major && changelog -M && yarn release:lottie && yarn version --major && yarn release",
    "release:minor": "yarn bump --release minor && changelog -m && yarn release:lottie && yarn version --minor && yarn release",
    "release:patch": "yarn bump --release patch && changelog -p && yarn release:lottie && yarn version --patch && yarn release",
    "release:lottie": "git add . && git commit -m 'chore: update CHANGELOG.md' --no-verify"
  },
  "private": true,
  "devDependencies": {
    "@angular-builders/jest": "^8.2.0",
    "@angular-devkit/build-angular": "0.900.0-next.4",
    "@angular/animations": "9.0.0-next.6",
    "@angular/cli": "9.0.0-next.4",
    "@angular/common": "9.0.0-next.6",
    "@angular/compiler": "9.0.0-next.6",
    "@angular/compiler-cli": "9.0.0-next.6",
    "@angular/core": "9.0.0-next.6",
    "@angular/platform-browser": "9.0.0-next.6",
    "@angular/platform-browser-dynamic": "9.0.0-next.6",
    "@angular/platform-server": "9.0.0-next.6",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-angular": "^8.1.0",
    "@cypress/webpack-preprocessor": "^4.1.0",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.4",
    "@types/semver": "^6.0.2",
    "angular-http-server": "^1.9.0",
    "codelyzer": "^5.1.0",
    "colors": "^1.3.3",
    "core-js": "^3.2.1",
    "cypress": "^3.4.1",
    "express": "^4.17.1",
    "generate-changelog": "^1.8.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "jest-preset-angular": "^7.1.1",
    "lint-staged": "^9.2.5",
    "lottie-web": "^5.5.8",
    "ng-packagr": "^5.5.0",
    "prettier": "^1.18.2",
    "rxjs": "^6.5.3",
    "semver": "^6.3.0",
    "start-server-and-test": "^1.10.0",
    "ts-loader": "^6.1.0",
    "ts-node": "^8.3.0",
    "tsickle": "^0.37.0",
    "tslib": "^1.10.0",
    "tslint": "^5.19.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "3.5.3",
    "zone.js": "^0.10.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "endOfLine": "lf",
    "tabWidth": 2,
    "printWidth": 100,
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "singleQuote": true
  }
}
