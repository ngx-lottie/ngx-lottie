{
  "name": "ngx-lottie",
  "version": "6.4.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngx-lottie/ngx-lottie.git"
  },
  "keywords": [
    "animation",
    "canvas",
    "svg",
    "after effects",
    "plugin",
    "angular",
    "angular8",
    "angular 8",
    "angular9",
    "angular 9",
    "angular10",
    "angular 10",
    "universal",
    "ivy"
  ],
  "author": "Artur Androsovych",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ngx-lottie/ngx-lottie/issues"
  },
  "homepage": "https://github.com/ngx-lottie/ngx-lottie#readme",
  "scripts": {
    "postinstall": "ngcc",
    "start-test": "start-server-and-test",
    "ng": "ng",
    "test": "ng test",
    "lint": "ng lint",
    "build": "yarn ts-node ./tools/build && yarn ts-node ./tools/copy-readme",
    "format": "prettier --write \"*.{ts,js,md}\"",
    "bump": "yarn ts-node ./tools/bump",
    "serve:integration": "ng s --project integration --live-reload false",
    "serve:integration:static": "serve dist-integration -l 4200",
    "serve:integration:ssr": "yarn ts-node integration/server",
    "build:integration": "ng run integration:build:production",
    "build:integration:ssr": "ng run integration:server:production",
    "// - E2E": "E2E testing #requires yarn build:integration",
    "cy:open": "cypress open --config integrationFolder=cypress/integration",
    "cy:open:ssr": "cypress open --config integrationFolder=cypress/ssr",
    "cy:run": "cypress run --config integrationFolder=cypress/integration",
    "cy:run:ssr": "cypress run --config integrationFolder=cypress/ssr",
    "cy:run:chrome": "yarn cy:run --browser chrome",
    "cy:run:chromium": "yarn cy:run --browser chromium",
    "e2e": "start-test serve:integration 4200 cy:open",
    "e2e:chrome": "start-test serve:integration 4200 cy:run:chrome",
    "e2e:ssr": "start-test serve:integration:ssr 4200 cy:open:ssr",
    "e2e:chromium": "start-test serve:integration 4200 cy:run:chromium",
    "// - CI": "CI Testing",
    "test:ci": "ng test --project lottie --colors --run-in-band",
    "test:ci:e2e": "yarn start-test serve:integration:static 4200 cy:run",
    "test:ci:integration:ssr": "yarn build:integration && yarn build:integration:ssr && yarn start-test serve:integration:ssr 4200 cy:run:ssr",
    "// - RELEASE": "Scripts for version incrementing + generating changelog + releasing",
    "release": "git push origin && git push origin --tags",
    "release:major": "yarn bump --release major && changelog -M && yarn release:lottie && yarn version --major && yarn release",
    "release:minor": "yarn bump --release minor && changelog -m && yarn release:lottie && yarn version --minor && yarn release",
    "release:patch": "yarn bump --release patch && changelog -p && yarn release:lottie && yarn version --patch && yarn release",
    "release:lottie": "git add . && git commit -m 'chore: update CHANGELOG.md' --no-verify"
  },
  "private": true,
  "devDependencies": {
    "@angular-builders/jest": "^10.0.1",
    "@angular-devkit/build-angular": "~0.1101.0-rc.0",
    "@angular-eslint/builder": "1.1.0",
    "@angular-eslint/eslint-plugin": "1.1.0",
    "@angular-eslint/eslint-plugin-template": "1.1.0",
    "@angular-eslint/schematics": "1.1.0",
    "@angular-eslint/template-parser": "1.1.0",
    "@angular/animations": "~11.1.0-rc.0",
    "@angular/cli": "~11.1.0-rc.0",
    "@angular/common": "~11.1.0-rc.0",
    "@angular/compiler": "~11.1.0-rc.0",
    "@angular/compiler-cli": "~11.1.0-rc.0",
    "@angular/core": "~11.1.0-rc.0",
    "@angular/platform-browser": "~11.1.0-rc.0",
    "@angular/platform-browser-dynamic": "~11.1.0-rc.0",
    "@angular/platform-server": "~11.1.0-rc.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@cypress/webpack-preprocessor": "^5.4.1",
    "@types/express": "^4.17.2",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@types/semver": "^7.3.1",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0",
    "colors": "^1.4.0",
    "cypress": "^4.9.0",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "30.7.6",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "express": "^4.17.1",
    "generate-changelog": "^1.8.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-preset-angular": "^8.2.1",
    "lint-staged": "^10.2.11",
    "lottie-web": "^5.5.10",
    "ng-packagr": "^11.0.3",
    "prettier": "^2.0.5",
    "rxjs": "^6.5.3",
    "semver": "^7.3.2",
    "start-server-and-test": "^1.10.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tsickle": "^0.39.0",
    "tslib": "^2.0.0",
    "typescript": "~4.0.5",
    "zone.js": "^0.10.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "endOfLine": "lf",
    "tabWidth": 2,
    "printWidth": 100,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "singleQuote": true
  }
}
